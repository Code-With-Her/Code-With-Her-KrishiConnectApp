<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient with earthy tones -->
    <gradient
        android:startColor="@color/sementicColor"
    android:endColor="@color/white"
    android:angle="45" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Subtle border -->
    <stroke
        android:width="1dp"
        android:color="#A3C47C" />  <!-- Soft green border -->

    <!-- Padding inside the EditText -->
    <padding
        android:top="4dp"
        android:bottom="4dp"
        android:left="12dp"
        android:right="12dp" />
</shape>
